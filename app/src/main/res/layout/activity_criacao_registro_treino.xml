<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_tela_gradiente"
    tools:context=".historicoTreino.CriacaoRegistroTreino">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Criação de anotações"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        android:textSize="35dp"
        android:gravity="center"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="8dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/editTextNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do Treino"
                android:inputType="text"
                android:textColorHint="@color/cinza"
                android:padding="12dp"
                android:background="@drawable/input_background" />

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <EditText
                android:id="@+id/editTextData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/cinza"

                android:hint="Data (ex.: 2024-11-24)"
                android:inputType="date"
                android:padding="12dp"
                android:background="@drawable/input_background" />

            <!-- Espaçamento -->
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <EditText
                android:id="@+id/editTextAnotacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Anotações"
                android:textColorHint="@color/cinza"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:lines="4"
                android:padding="12dp"
                android:background="@drawable/input_background" />

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <Button
                android:id="@+id/buttonSalvar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salvar"
                android:backgroundTint="@color/amarelo"
                android:textColor="@color/black"
                android:padding="12dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
