<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo específico para o TextView de "Pain" -->
    <style name="pain">
        <item name="android:textSize">69.65sp</item>
        <item name="android:textColor">#E7A600</item>
        <item name="android:layout_width">258dp</item>
        <item name="android:layout_height">82dp</item>
    </style>
    <string name="pain">Pain</string>

    <!-- Estilo específico para o TextView com fonte e formatação de "Pain" -->
    <style name="TextViewPain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:text">@string/pain</item>
        <item name="android:textSize">69.65sp</item>
        <item name="android:textColor">#E7A600</item>
        <item name="android:fontFamily">@font/jura_light</item>
    </style>

    <!-- Estilo específico para Caixa de Texto Cinza -->
    <style name="CaixaTextoCinza">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:ems">10</item>
        <item name="android:background">@drawable/caixa_fundo_cinza</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Estilo genérico para TextView -->
    <style name="CustomTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textStyle">normal</item>
    </style>




    <!-- Estilo Botão amarelo -->
        <style name="botaoAmerelo">
            <item name="android:layout_width">180dp</item>
            <item name="android:layout_height">56dp</item>
            <item name="android:layout_marginBottom">156dp</item>
            <item name="android:textColor">#FFFFFF</item> <!-- Defina a cor do texto conforme necessário -->
            <item name="android:textSize">16sp</item> <!-- Defina o tamanho do texto conforme necessário -->
            <item name="android:padding">12dp</item> <!-- Adicione um preenchimento se necessário -->
            <item name="android:fontFamily">@font/open_sans</item> <!-- Defina a fonte se necessário -->
            <item name="android:background">"@drawable/caixa_fundo_amarelo"</item>
            <item name="android:textAllCaps">false</item>
        </style>

    <!-- Estilo Botão cinza -->
    <style name="botaoCinza">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginBottom">156dp</item>
        <item name="android:textColor">#000000</item> <!-- Defina a cor do texto conforme necessário -->
        <item name="android:textSize">16sp</item> <!-- Defina o tamanho do texto conforme necessário -->
        <item name="android:padding">12dp</item> <!-- Adicione um preenchimento se necessário -->
        <item name="android:fontFamily">@font/open_sans</item> <!-- Defina a fonte se necessário -->
        <item name="android:background">"@drawable/caixa_fundo_cinza"</item>
        <item name="android:textAllCaps">false</item>
    </style>












</resources>